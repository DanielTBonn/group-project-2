
<div class="product-card grid grid-rows-3 grid-flow-col gap-4 my-5 border-solid border-slate-900 border-2 mx-5 py-2">
    <div class="row-span-3">
        <div class="flex justify-center items-center">
            <div class="image-container" style="background-image: url({{image}});"></div>
        </div>
    </div>

    <div class="card-body col-span-2">
        <div class="flex flex-col justify-center items-center">
            <h2 class="font-bold font-lg">{{product_name}}</h2> 
            <p id="price-tag">Price: $<span id="item-price">{{price}}</span></p>
        </div>
    </div>

    <div class="row-span-2 col-span-2">
        <div class="flex justify-center items-center">
            <a href="/demo"><button id="btn-buy" class="btn-buy block px-3 py-2 text-white bg-blue-500 hover:bg-blue-600 rounded-mb mb-2 mx-2 ">Buy Now</button></a>
            <button class="btn-remove block px-3 py-2 rounded-mb mb-2 bg-black text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 mx-2" id="btn-remove" data-id="{{id}}">Remove from Cart</button>
        </div>
    </div>
</div>
